{
	"name": "@hatchgrid/landing-page",
	"description": "Hatchgrid landing page built with Astro and i18n support",
	"version": "0.0.1",
	"private": true,
	"license": "Hatchgrid Custom License",
	"homepage": "https://hatchgrid.tech",
	"engines": {
		"node": ">=22.0.0",
		"pnpm": ">=10.13.1"
	},
	"packageManager": "pnpm@10.13.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/dallay/hatchgrid.git",
		"directory": "client/apps/landing-page",
		"branch": "main"
	},
	"bugs": {
		"url": "https://github.com/dallay/hatchgrid/issues"
	},
	"keywords": [
		"hatchgrid",
		"landing-page",
		"astro"
	],
	"author": "Hatchgrid Team",
	"scripts": {
		"update": "pnpm update",
		"update-interactive": "pnpm update --interactive",
		"dev": "astro dev",
		"start": "astro dev --open",
		"build": "astro check && astro build",
		"preview": "astro preview",
		"check": "astro check && biome check . --fix",
		"astro": "astro",
		"test": "vitest run",
		"test:watch": "vitest",
		"structure": "npx --yes tree-extended -max=5 -max-show-not-empty -gitignore > docs/structure.md && echo '```' >> docs/structure.md && cat docs/structure.md | sed -i '' -e '1i\\\n```plaintext' docs/structure.md && echo '# Project Structure\n' | cat - docs/structure.md > temp && mv temp docs/structure.md"
	},
	"dependencies": {
		"@astrojs/check": "^0.9.4",
		"@astrojs/mdx": "^4.3.0",
		"@astrojs/rss": "^4.0.12",
		"@astrojs/sitemap": "^3.4.1",
		"@astrojs/vue": "^5.1.0",
		"@hatchgrid/utilities": "workspace:*",
		"@iconify-json/openmoji": "^1.2.9",
		"@iconify-json/tabler": "^1.2.19",
		"@tailwindcss/vite": "^4.1.11",
		"@vee-validate/zod": "^4.15.1",
		"@vueuse/core": "^13.4.0",
		"astro": "^5.10.1",
		"astro-icon": "^1.1.5",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-vue-next": "^0.525.0",
		"mdast-util-to-string": "^4.0.0",
		"reading-time": "^1.5.0",
		"reka-ui": "^2.3.1",
		"tailwindcss": "^4.1.11",
		"tw-animate-css": "^1.3.4",
		"vee-validate": "^4.15.1",
		"vue": "^3.5.17",
		"vue-sonner": "^2.0.1",
		"zod": "^3.25.67"
	},
	"devDependencies": {
		"@hatchgrid/config": "workspace:*",
		"@tailwindcss/typography": "^0.5.16",
		"happy-dom": "^18.0.1",
		"sharp": "^0.34.2",
		"tailwind-merge": "^3.3.1",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4"
	}
}
