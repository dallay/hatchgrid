---
import { Icon } from "astro-icon/components";
import { Card } from '@/components/ui/card'
import { Button } from '@/components/ui/button'
import Link from "@/components/Link.astro";

interface PricingPlan {
  title: string;
  description: string;
  price: number;
  features: {
    text: string;
    value?: string;
  }[];
}

const plans: PricingPlan[] = [
  {
    title: 'Starter',
    description: 'Best option for personal use & for your next project.',
    price: 29,
    features: [
      { text: 'Individual configuration' },
      { text: 'No setup, or hidden fees' },
      { text: 'Team size', value: '1 developer' },
      { text: 'Premium support', value: '6 months' },
      { text: 'Free updates', value: '6 months' }
    ]
  },
  {
    title: 'Company',
    description: 'Relevant for multiple users, extended & premium support.',
    price: 99,
    features: [
      { text: 'Individual configuration' },
      { text: 'No setup, or hidden fees' },
      { text: 'Team size', value: '10 developers' },
      { text: 'Premium support', value: '24 months' },
      { text: 'Free updates', value: '24 months' }
    ]
  },
  {
    title: 'Enterprise',
    description: 'Best for large scale uses and extended redistribution rights.',
    price: 499,
    features: [
      { text: 'Individual configuration' },
      { text: 'No setup, or hidden fees' },
      { text: 'Team size', value: '100+ developers' },
      { text: 'Premium support', value: '36 months' },
      { text: 'Free updates', value: '36 months' }
    ]
  }
]
---
<section class="bg-background">
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
    <div class="mx-auto max-w-screen-md text-center mb-8 lg:mb-12">
    <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-foreground">Designed for business teams like yours</h2>
    <p class="mb-5 text-muted-foreground text-base sm:text-xl">Here at Flowbite we focus on markets where technology, innovation, and capital can unlock long-term value and drive economic growth.</p>
    </div>
    <div class="grid grid-cols-1 gap-6 sm:gap-8 lg:grid-cols-3">
    {plans.map((plan) => (
      <Card class="relative flex flex-col">
      <div class="flex-1 space-y-6 p-6">
        <div>
        <h3 class="text-2xl font-semibold leading-none">{plan.title}</h3>
        <p class="mt-2 text-sm text-muted-foreground">{plan.description}</p>
        </div>
        <div class="flex items-baseline">
        <span class="text-5xl font-extrabold">${plan.price}</span>
        <span class="ml-2 text-muted-foreground">/month</span>
        </div>
        <ul class="space-y-4">
        {plan.features.map((feature) => (
          <li class="flex items-center gap-3">
          <Icon name="tabler:check" class="h-5 w-5 text-green-500 dark:text-green-400 flex-shrink-0" />
          <span>
            {feature.text}
            {feature.value && <span class="font-semibold">: {feature.value}</span>}
          </span>
          </li>
        ))}
        </ul>
      </div>
      <div class="p-6 pt-0">
        <Link href="#" variant="default" class="w-full">Get started</Link>
      </div>
      </Card>
    ))}
    </div>
  </div>
  </section>
