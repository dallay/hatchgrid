---
import { LOCALES, type Lang, useTranslations } from "@/i18n";
import Layout from "@/layouts/Base.astro";
import Footer from "@/components/Footer.astro";

const t = useTranslations(Astro.currentLocale as Lang);
const locale = Astro.currentLocale as Lang;

export const getStaticPaths = () =>
	Object.keys(LOCALES).map((lang) => ({
		params: { lang },
	}));
---

<Layout title={t('privacyPolicy.title')} description={t('privacyPolicy.description')}>
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-4">{t('privacyPolicy.title')}</h1>
    <p>{t('privacyPolicy.contentPlaceholder')}</p>
  </main>
  <Footer />
</Layout>
