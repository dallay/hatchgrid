{
	"name": "@hatchgrid/web",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "pnpm --filter @hatchgrid/utilities build && vite",
		"dev:e2e": "pnpm --filter @hatchgrid/utilities build && vite --port 9876",
		"build": "pnpm --filter @hatchgrid/utilities build && vue-tsc -b && vite build",
		"check": "vue-tsc -b",
		"format": "biome format . --write",
		"preview": "vite preview",
		"pretest": "pnpm --filter @hatchgrid/utilities build",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "start-server-and-test dev:e2e http://localhost:9876 'playwright test'",
		"test:e2e:ui": "start-server-and-test dev:e2e http://localhost:9876 'playwright test --ui'",
		"test:e2e:debug": "start-server-and-test dev:e2e http://localhost:9876 'playwright test --debug'"
	},
	"dependencies": {
		"@hatchgrid/logger": "workspace:*",
		"@hatchgrid/utilities": "workspace:*",
		"@internationalized/date": "^3.8.2",
		"@tailwindcss/vite": "^4.1.12",
		"@tanstack/vue-table": "^8.21.3",
		"@unovis/ts": "^1.6.0",
		"@unovis/vue": "^1.6.0",
		"@vee-validate/zod": "^4.15.1",
		"@vueuse/core": "^13.7.0",
		"axios": "^1.11.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-vue-next": "^0.541.0",
		"pinia": "^3.0.3",
		"reka-ui": "^2.4.1",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.12",
		"tw-animate-css": "^1.3.7",
		"vaul-vue": "^0.4.1",
		"vee-validate": "^4.15.1",
		"vue": "^3.5.19",
		"vue-i18n": "^11.1.11",
		"vue-router": "^4.5.1",
		"vue-sonner": "^2.0.8"
	},
	"devDependencies": {
		"@iconify-json/ph": "^1.2.2",
		"@iconify/json": "^2.2.378",
		"@pinia/testing": "1.0.2",
		"@playwright/test": "^1.55.0",
		"@types/node": "^24.3.0",
		"@vitejs/plugin-vue": "^6.0.1",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"@vue/test-utils": "^2.4.6",
		"@vue/tsconfig": "^0.8.1",
		"axios-mock-adapter": "^2.1.0",
		"jsdom": "^26.1.0",
		"msw": "^2.10.5",
		"start-server-and-test": "^2.0.13",
		"typescript": "~5.9.2",
		"unplugin-icons": "^22.2.0",
		"unplugin-vue-components": "^29.0.0",
		"vite": "^7.1.3",
		"vitest": "^3.2.4",
		"vue-tsc": "^3.0.6"
	}
}
