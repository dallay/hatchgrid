{
	"extends": "@hatchgrid/tsconfig/tsconfig.base.json",
	"compilerOptions": {
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"]
		},
		"allowImportingTsExtensions": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist", "src/**/*.spec.ts"]
}
