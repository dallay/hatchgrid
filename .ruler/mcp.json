{
	"mcpServers": {
		"sequentialthinking": {
			"command": "docker",
			"args": [
				"run",
				"--rm",
				"-i",
				"--name",
				"mcp-sequentialthinking",
				"mcp/sequentialthinking"
			]
		},
		"memory": {
			"command": "docker",
			"args": [
				"run",
				"-i",
				"-v",
				"claude-memory:/app/dist",
				"--rm",
				"--name",
				"mcp-memory",
				"mcp/memory"
			]
		},
		"filesystem": {
			"command": "docker",
			"args": [
				"run",
				"--rm",
				"-i",
				"--name",
				"mcp-filesystem",
				"mcp/filesystem"
			]
		},
		"github": {
			"command": "docker",
			"args": [
				"run",
				"--rm",
				"-i",
				"--name",
				"mcp-github",
				"-e",
				"GITHUB_TOKEN",
				"mcp/github"
			]
		},
		"git": {
			"command": "npx",
			"args": ["-y", "@modelcontextprotocol/server-git", "--repository", "."]
		}
	}
}
